{
  "compilerOptions": {
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "removeComments":true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "__mocks__",
    "tasks"
  ]
}
